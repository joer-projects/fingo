{
  // editor
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.fontFamily": "JetBrains Mono", // download: https://fonts.google.com/specimen/JetBrains+Mono
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.semanticHighlighting.enabled": false,
  // explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".env": ".env.example",
    "package.json": "package-lock.json, .editorconfig, .gitignore, .eslint*, tsconfig.json, tsup.config.ts, vitest.config.ts, vitest.workspace.ts, .npmrc, apollo.config.js, response.json, *.log.json",
    "aws.build.sh": "buildspec-local.yml, codebuild_build.sh, .env.build.aws, .env.build.aws.example",
    "template.yml": "template-layers.yml, template-secret.yml, template-api.yml, template-resolver.yml, buildspec.yml, prepare-files.sh, pipeline.create.sh, samconfig.toml",
  },
  "yaml.customTags": [
    "!Split sequence",
    "!And sequence",
    "!If sequence",
    "!Not sequence",
    "!Equals sequence",
    "!Or sequence",
    "!FindInMap sequence",
    "!Join sequence",
    "!Ref",
    "!GetAtt",
    "!Sub",
    "!Condition",
    "!And",
    "!Base64",
    "!Cidr",
    "!Condition",
    "!Equals",
    "!FindInMap",
    "!GetAtt",
    "!GetAZs",
    "!If",
    "!ImportValue",
    "!Join",
    "!Not",
    "!Or",
    "!Ref",
    "!Select",
    "!Sub",
    "!Transform",
    "!Include"
  ],
  "[graphql]": {
    "editor.defaultFormatter": "apollographql.vscode-apollo",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "explicit",
      "source.fixAll.eslint": "explicit",
      "source.fixAll.tslint": "explicit"
    }
  },
  // material-icons - https://github.com/PKief/vscode-material-icon-theme
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.associations": {
    // general
    "formation": "Terraform",
    "provision": "Terraform",
    "playground": "Apollo",
    "appsync": "Graphql",
    "pipeline": "Pipe",
    "layers": "Scala",
    "infra": "Other",
    "seeds": "Svelte",
    "local": "Client",
    "dynamodb": "Windows",
    "nodejs": "Node",
    "external": "Global",
    "contact": "Admin",
    "transaction": "Ci",
    // project
    "features": "mjml",
    "setup": "Config",
    "internal": "Container",
    "feature": "mjml",
    "property": "Home",
    "hydration": "Ci",
    "journal": "Ci",
    "partner": "Admin",
    "address": "Routes",
    "taxes": "Rules",
    "valuation": "Dist",
    "account": "Coverage",
    "organization": "Context",
    "company": "Context",
    "user": "Admin",
    "plan": "Packages",
    "role": "Rules",
    "migrations": "Rules",
    "usage": "Command",
    "urn": "Container",
    // clean architecture
    "entity": "Moon",
    "object": "Tools",
    "domain": "Core",
    "usecase": "Shader",
    "application": "App",
    "protocol": "Rules",
    "policy": "Guard",
    "mapper": "Json",
    "adapter": "Json",
    "dto": "Less",
    "gateway": "Shared",
    "repository": "Database",
    "http": "Public",
  },
  "material-icon-theme.files.associations": {
    "*.log.json": "Log",
    ".eslint-ignore": "Eslint",
    ".env.*": "Tune",
    ".env.build.aws": "Tune",
    ".env.build.aws.example": "Tune",
  },
  "cSpell.words": [
    "NOSQL",
    "userpool"
  ],
  "testing.automaticallyOpenPeekView": "never",
}